<div class="sport-menu" ng-controller="Sports">
  <div class="sport-menu-items"><div><div>
    <ul class="sport-menu-items-container">
      <li ng-repeat="sport in getSports()" ng-class="{ active:sport.isActive }"><p>{{ sport.name }}</p>
        <div class="sport-menu-item-countries" ng-controller="Countries">
          <div class="sport-menu-blocks" ng-repeat="country_block in getBlockCountryBySport(sport)">
            <div ng-repeat="country in getCountriesByBlockAndSport(country_block, sport)">
              <p class="alphabet" ng-show="getFirstWordByCountry(country) != first_word">{{ getFirstWordByCountry(country) }}</p>
              <p><a href="/#/sport/{{sport.id}}/country/{{country.id}}/championships" ng-click="selectWidthCountryAndSport(country, sport);">{{ country.name }}</a></p>
              {{setFirstWord( getFirstWordByCountry(country) )}}
            </div>
          </div>
        </div>
      </li>
    </ul>
  </div></div></div>
</div>