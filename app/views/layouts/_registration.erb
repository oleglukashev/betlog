<div id="registration" class="hide" ng-controller="Registration">
	<div class="loginbox-content-top"><div><div></div></div></div>
	<div class="loginbox-content-body">
		<div class="loginbox-close" ng-click="hideRegister();"></div>
		<p class="loginbox-title">Регистрация</p>
		<form novalidate name="registration">
			<div class="input-wrap">
				<div><div><div><input type="text" name="login" placeholder="E-mail" ng-model="login" required ></div></div></div>
			</div>
			<p class="loginbox-input-error hide"></p>
			<div class="input-wrap">
				<div><div><div><input type="text" name="name" placeholder="Имя" ng-model="name" required ></div></div></div>
			</div>
			<p class="loginbox-input-error hide"></p>
			<div class="input-wrap">
				<div><div><div><input type="password" placeholder="Пароль" name="password" ng-model="password" required min="8"></div></div></div>
			</div>
			<div>
				<p><button ng-disabled="!login || !password" ng-click="loginSubmit();" onclick="return false;">Зарегистрироваться</button></p>
				<div class="clear"></div>
			</div>
		</form>
	</div>
	<div class="loginbox-content-bottom"><div><div></div></div></div>
</div>